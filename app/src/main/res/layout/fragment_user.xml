<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/layout">

        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:scaleY="1"
            app:mwhVelocity="2.5"
            app:mwhProgress="1"
            app:mwhIsRunning="true"
            app:mwhGradientAngle="360"
            app:mwhWaveHeight="50dp"
            app:mwhColorAlpha="0.2"
            app:mwhStartColor="@color/colorPrimaryDark"
            app:mwhCloseColor="@color/colorPrimaryLight"
            app:mwhWaves="MultiWave"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:clickable="true"
            android:id="@+id/fragment_user_profile_image"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:src="@drawable/user_empty_image_placeholder"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/fragment_user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_user_profile_image"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_36sdp"
            android:fontFamily="@font/proxima_nova_regular"
            android:letterSpacing="-0.05"
            android:textColor="#F1F1F1"
            tools:text="Name, 24"/>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_user_profile_name"
            android:elevation="3dp"
            android:paddingBottom="24dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/background_icon_circle"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/baseline_settings_black_24"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Settings"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="12dp"
                    android:background="#DDDDDD"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile_edit_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/background_icon_circle"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/baseline_edit_black_24"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Edit profile"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>