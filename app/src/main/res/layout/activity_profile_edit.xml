<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:overScrollMode="never"
    tools:context="com.eternalsrv.ui.ProfileEditActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_proile_photos_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textSize="@dimen/_21sdp"
            android:text="About me:"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/match_value_preference_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true">
            <EditText
                android:id="@+id/profile_edit_description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:gravity="start"
                android:backgroundTint="@color/transparent"
                android:inputType="textNoSuggestions|textMultiLine"
                android:fontFamily="@font/proxima_soft_regular"
                android:textColor="@color/black_profile_description"
                android:textSize="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingTop="@dimen/_12sdp"
                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
